<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/imgPosterRow"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/desc_poster"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtTitleRow"
        android:layout_toEndOf="@id/imgPosterRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="TÃ­tulo" />

    <TextView
        android:id="@+id/txtDirectorRow"
        android:layout_below="@id/txtTitleRow"
        android:layout_toEndOf="@id/imgPosterRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textSize="14sp"
        android:text="Director" />
